# ---------- build stage ----------
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# copy csproj first to leverage layer caching
COPY TailwindTraders.Website/*.csproj ./TailwindTraders.Website/
RUN dotnet restore ./TailwindTraders.Website/TailwindTraders.Website.csproj

# copy everything and publish
COPY . .
RUN dotnet publish ./TailwindTraders.Website/TailwindTraders.Website.csproj -c Release -o /app/publish

# ---------- runtime stage ----------
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish .
ENV ASPNETCORE_URLS=http://+:80
EXPOSE 80
ENTRYPOINT ["dotnet","TailwindTraders.Website.dll"]
